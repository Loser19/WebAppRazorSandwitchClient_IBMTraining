@page "{id:int}"
@model WebAppRazorSandwitchClient.Pages.SwEditModel
@{
    ViewData["Title"] = "Edit Sandwich";
}

<h1>Edit Sandwich</h1>

<form method="post">
    <input type="hidden" asp-for="EditSandwitch.Id" />
    <div class="form-group">
        <label asp-for="EditSandwitch.Name">Name</label>
        <input asp-for="EditSandwitch.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EditSandwitch.Price">Price</label>
        <input asp-for="EditSandwitch.Price" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>