@page
@model WebAppRazorSandwitchClient.Pages.SwListModel
@{
    ViewData["Title"] = "Sandwitch List";
}
<h1>Sandwich List</h1>
<a asp-page="/SwCreate" class="btn btn-success">Create New Sandwich</a>
<table class="table table-striped mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sandwich in await Model.SwList)
        {
            <tr>
                <td>@sandwich.Name</td>
                <td>@($"{sandwich.Price:C}")</td>
                <td>
                    <a asp-page="/SwDetails" asp-route-id="@sandwich.Id" class="btn btn-info">Details</a>
                    <a asp-page="/SwEdit" asp-route-id="@sandwich.Id" class="btn btn-warning">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@sandwich.Id" style="display:inline;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>